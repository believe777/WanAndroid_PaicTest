.hot_view{
  flex-direction: column;
  display: flex;
}

.hot_search_view{
  margin: 10px;
  border: solid;
  border-width: 1px;
  border-color: rgb(76, 158, 76);
  border-radius: 8px;
}

.hot_search_model{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 10px;
}

.hot_search_key_text{
  border: solid;
  border-color: rgb(76, 158, 76);
  padding: 2px 15px 2px 15px;
  margin-right: 8px;
  margin-top: 8px;
  border-radius: 50px;
  font-size: 14px;
  border-width: 1px;
}

